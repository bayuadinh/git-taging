pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'make package'
            }
        }
        stage('Test') {
            steps {
                sh 'make check'
            }
        }
        stage('Deploy') {
            when { tag "RC-*" }
            steps {
                echo 'Deploying only because this commit is tagged...'
                cat 'versiku'
            }
        }
    }
}